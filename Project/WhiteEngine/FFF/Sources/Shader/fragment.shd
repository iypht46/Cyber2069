#version 330 core

uniform sampler2D ourTexture;

flat in int Outmode;
in vec3 OutColor;
in vec2 TexCoords;

out vec4 finalColor;

void main()
{   
	int mode = Outmode;

    if(mode == 0)
	{
		finalColor = vec4( OutColor, 1.0 ); 
	} 
    else if(mode == 1)
    {
    	finalColor = texture(ourTexture, TexCoords);
    }
	else if(mode == 2)
	{
		vec4 sampled = vec4(1.0, 1.0, 1.0, texture(ourTexture, TexCoords).r);
		finalColor = vec4(OutColor, 1.0) * sampled;
	}
}  