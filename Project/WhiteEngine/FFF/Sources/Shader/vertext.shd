#version 330

uniform mat4 mMatrix; 
uniform vec3 color = vec3(1.0f,1.0f,0.0f);

uniform float offsetX = 0;
uniform float offsetY = 1;

in vec2 pos2D;
in vec2 inTexCoord;

out vec3 OutColor;
out vec2 TexCoord;

void main()
{
   gl_Position = mMatrix * vec4( pos2D.x, pos2D.y, 0, 1 );
   OutColor = color;

   TexCoord = inTexCoord;

   TexCoord.x = TexCoord.x + offsetX;
   TexCoord.y = 1.0 - (TexCoord.y - offsetY);
}